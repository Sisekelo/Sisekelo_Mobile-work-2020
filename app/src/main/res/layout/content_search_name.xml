<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.Search_Name"
    tools:showIn="@layout/activity_search_name">

    <EditText
        android:id="@+id/input_county"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Insert country name"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/button_country_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxHeight="10dp"
        android:layout_margin="12dp"
        android:textColor="@android:color/white"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="Search"
        android:background="@drawable/button"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_search_by_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Search by date"
        android:textAlignment="center" />

</LinearLayout>